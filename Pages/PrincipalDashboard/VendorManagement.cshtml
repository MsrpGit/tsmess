<script>
    function deleteVendor(element) {
        var vendorId = element.getAttribute('data-vendorid');
        if (confirm('Are you sure you want to delete this vendor?')) {
            document.getElementById('deleteVendorId').value = vendorId;
            document.getElementById('deleteVendorForm').submit();
        }
    }

    function validateOTP() {
        var otpInput = document.getElementById("otp");
        var otpValue = otpInput.value.trim();

        if (otpValue === "") {
            alert("Please enter the OTP.");
            otpInput.focus();
            return false;
        }

        // Optional: check if OTP is 6 digits and numeric
        var otpRegex = /^\d{6}$/;
        if (!otpRegex.test(otpValue)) {
            alert("Please enter a valid 6-digit OTP.");
            otpInput.focus();
            return false;
        }

        return true; // allow form submission
    }


</script>